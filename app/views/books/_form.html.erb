    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "Fehler") %> verhinderten das Speichern:</h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Titel" %><br>
